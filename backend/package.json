    "multer-s3": "^3.0.1",
    "aws-sdk": "^2.1718.0",
    "cloudinary": "^2.7.0",
    "bull": "^4.16.5",
    "bullmq": "^5.30.1",
    "ioredis": "^5.4.2",
    "socket.io": "^4.8.3",
