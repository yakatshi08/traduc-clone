# Copier ce fichier en .env et remplir les valeurs

# Server
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:5173

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/traducxion"
REDIS_URL="redis://localhost:6379"

# JWT (Générer avec: openssl rand -base64 64)
JWT_SECRET=CHANGE_THIS_SECRET_KEY
JWT_REFRESH_SECRET=CHANGE_THIS_REFRESH_SECRET

# OpenAI (Required for transcription)
OPENAI_API_KEY=sk-proj-xxxxx

# Storage (Choose one)
DEFAULT_STORAGE_PROVIDER=local

# Email
EMAIL_FROM_ADDRESS=noreply@traducxion.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Add other services as needed...